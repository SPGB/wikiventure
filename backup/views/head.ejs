		<% if (locals.scenes) { %>
		var scenes = new String('<%= scenes %>').split(',');
		<% } else { %>
		var scenes = [];
		<% } %>
		var suggestions = new String('<%= (locals.suggestions)? suggestions : '' %>').split(',');
		var inventory = <%- (locals.items && items.length > 0)? JSON.stringify(items) : '[]' %>;
		var room = <%= (locals.msgs && msgs[0] && msgs[0].room)? msgs[0].room : 0 %>;
	</script>
	<a href="/"><h1><img src="../img/sword.svg" id="size_logo" /><span>Wiki</span>venture</h1></a>
